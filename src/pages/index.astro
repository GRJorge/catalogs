---
import Layout from "../layouts/Layout.astro";
import Catalog from "../components/catalog.astro";
import { getCollection } from "astro:content";

const allCatalogs = await getCollection("catalogs");
---

<Layout title="Catalogos de autopartes">
  <section class="flex flex-col gap-2 mt-4 mb-10" id="catalogs">
    {
      allCatalogs.map((catalog) => {
        return (
          <Catalog
            link={catalog.data.link}
            name={catalog.data.name}
            slug={catalog.slug}
            autoparts={catalog.data.autoparts}
            client:visible
          />
        );
      })
    }
  </section>
</Layout>
